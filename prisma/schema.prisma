// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  // directUrl = env("DIRECT_URL")
}

enum DomainStatus {
  Pending
  Verifying
  Securing
  Live
}

enum StripeConnectStatus {
  NotConnected
  Pending
  Active
  Restricted
}

enum OrderStatus {
  Pending
  Completed
  Shipped
  Failed
  Refunded
}

enum PaymentStatus {
  Pending
  Paid
  Settled
  Refunded
}

enum HeroTextAlign {
  Left
  Center
  Right
}

enum SizeType {
  VOLUME
  WEIGHT
  APPAREL_ALPHA
  APPAREL_NUMERIC
  FOOTWEAR
  DIMENSION
  COUNT
  STORAGE
}

enum Unit {
  // Volume
  ML
  L
  // Weight
  G
  KG
  // Apparel Alpha
  XS
  S
  M
  L_SIZE
  XL
  XXL
  // Apparel Numeric
  SIZE_28
  SIZE_30
  SIZE_32
  SIZE_34
  SIZE_36
  SIZE_38
  SIZE_40
  SIZE_42
  // Footwear
  US_6
  US_7
  US_8
  US_9
  US_10
  US_11
  US_12
  US_13
  // Dimension
  CM
  METER
  INCH
  FEET
  // Count
  PCS
  PACK
  // Storage
  GB
  TB
}

model Theme {
  id            String   @id @default(cuid())
  name          String   @unique
  primaryHex    String
  secondaryHex  String
  fontFamily    String
  createdAt     DateTime @default(now())

  stores Store[]

  @@map("themes")
}

model Store {
  id                     String              @id @default(cuid())
  ownerId                String              // References auth.users.id
  subdomainSlug          String              @unique
  storeName              String
  aboutText              String?
  heroImageUrl           String?
  heroHeadline           String?
  heroDescription        String?
  heroTextAlign          HeroTextAlign       @default(Left)
  storeLogoUrl           String?
  themeId                String?
  theme                  Theme?              @relation(fields: [themeId], references: [id], onDelete: SetNull)
  domain                 String?             @unique
  domainStatus           DomainStatus        @default(Pending)
  certificateGeneratedAt DateTime?
  // Stripe Connect fields
  stripeConnectId        String?             @unique
  stripeConnectStatus    StripeConnectStatus @default(NotConnected)
  stripeConnectedAt      DateTime?
  // Contact Information fields
  contactEmail           String?
  contactPhone           String?
  instagramUrl           String?
  facebookUrl            String?
  twitterUrl             String?
  linkedinUrl            String?
  youtubeUrl             String?
  whatsappNumber         String?
  supportedQueryTypes    String?             // JSON array: ["feedback", "complaint", "inquiry", "support"]
  createdAt              DateTime            @default(now())
  updatedAt              DateTime            @updatedAt

  products Product[]
  orders   Order[]
  faqs     StoreFaq[]
  privacySections StorePrivacySection[]
  shippingReturnsSections StoreShippingReturnsSection[]
  testimonials StoreTestimonial[]

  @@index([ownerId])
  @@index([themeId])
  @@index([domainStatus])
  @@index([domainStatus, domain])
  @@map("stores")
}

model StorePrivacySection {
  id        String   @id @default(cuid())
  storeId   String
  store     Store    @relation(fields: [storeId], references: [id], onDelete: Cascade)
  heading   String   @db.Text
  content   String   @db.Text
  sortOrder Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([storeId])
  @@index([storeId, sortOrder])
  @@map("store_privacy_sections")
}

model StoreShippingReturnsSection {
  id        String   @id @default(cuid())
  storeId   String
  store     Store    @relation(fields: [storeId], references: [id], onDelete: Cascade)
  heading   String   @db.Text
  content   String   @db.Text
  sortOrder Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([storeId])
  @@index([storeId, sortOrder])
  @@map("store_shipping_returns_sections")
}

model StoreFaq {
  id          String   @id @default(cuid())
  storeId     String
  store       Store    @relation(fields: [storeId], references: [id], onDelete: Cascade)
  question    String   @db.Text
  answer      String   @db.Text
  sortOrder   Int      @default(0)
  isPublished Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([storeId])
  @@index([storeId, sortOrder])
  @@map("store_faqs")
}

model StoreTestimonial {
  id           String   @id @default(cuid())
  storeId      String
  store        Store    @relation(fields: [storeId], references: [id], onDelete: Cascade)
  customerName String
  content      String   @db.Text
  sortOrder    Int      @default(0)
  isPublished  Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([storeId])
  @@index([storeId, sortOrder])
  @@map("store_testimonials")
}

model Product {
  id          String      @id @default(cuid())
  storeId     String
  store       Store       @relation(fields: [storeId], references: [id], onDelete: Cascade)
  name        String
  description String?     @db.Text
  sku         String?
  price       Decimal     @db.Decimal(10, 2)
  imageUrl    String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  deletedAt   DateTime?   // Soft delete: null = active, timestamp = deleted

  variants   ProductVariant[]
  images     ProductImage[]
  orderItems OrderItem[]

  @@index([storeId])
  @@index([deletedAt])
  @@map("products")
}

model ProductImage {
  id        String   @id @default(cuid())
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  url       String
  sortOrder Int      @default(0)
  createdAt DateTime @default(now())

  @@index([productId])
  @@index([productId, sortOrder])
  @@map("product_images")
}

model ProductVariant {
  id        String    @id @default(cuid())
  productId String
  product   Product   @relation(fields: [productId], references: [id], onDelete: Cascade)
  sizeType  SizeType?
  value     String?   // For numeric values or additional descriptors
  unit      Unit?
  price     Decimal?  @db.Decimal(10, 2) // Optional variant-specific price
  stock     Int       @default(0)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  orderItems OrderItem[]

  @@index([productId])
  @@map("product_variants")
}

model Order {
  id                 String      @id @default(cuid())
  storeId            String
  store              Store       @relation(fields: [storeId], references: [id], onDelete: Cascade)
  stripePaymentId    String      @unique
  stripeSessionId    String?     @unique
  customerEmail      String
  customerName       String?
  total              Decimal     @db.Decimal(10, 2)
  currency           String      @default("usd")
  status             OrderStatus @default(Pending)
  paymentStatus      PaymentStatus @default(Pending)
  // Shipping Information
  shippingFirstName  String?
  shippingLastName   String?
  shippingCompany    String?
  shippingAddress    String?
  shippingApartment  String?
  shippingCity       String?
  shippingState      String?
  shippingZipCode    String?
  shippingCountry    String?
  shippingPhone      String?
  // Shipping tracking
  trackingNumber     String?
  shippedAt          DateTime?
  createdAt          DateTime    @default(now())
  updatedAt          DateTime    @updatedAt

  items OrderItem[]

  @@index([storeId])
  @@index([status])
  @@index([paymentStatus])
  @@index([storeId, status, createdAt])
  @@index([storeId, createdAt])
  @@map("orders")
}

model OrderItem {
  id          String         @id @default(cuid())
  orderId     String
  order       Order          @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId   String
  product     Product        @relation(fields: [productId], references: [id], onDelete: Restrict)
  variantId   String?
  variant     ProductVariant? @relation(fields: [variantId], references: [id], onDelete: Restrict)
  productName String         // Snapshot of product name at time of purchase
  variantInfo String?        // Snapshot of variant details (e.g., "Size: L", "Volume: 500ml")
  quantity    Int
  unitPrice   Decimal        @db.Decimal(10, 2)

  @@index([orderId])
  @@index([productId])
  @@index([variantId])
  @@map("order_items")
}

// ==================== AUDIT LOGGING ====================

enum AuditAction {
  // Store
  StoreCreated
  StoreUpdated
  DomainUpdated
  DomainStatusChanged
  // Product
  ProductCreated
  ProductUpdated
  ProductDeleted
  // Stripe
  StripeConnected
  StripeDisconnected
  // Orders
  OrderCreated
  OrderStatusChanged
  OrderShipped
  // FAQ
  FaqCreated
  FaqUpdated
  FaqDeleted
  // Testimonials
  TestimonialCreated
  TestimonialUpdated
  TestimonialDeleted
  // Privacy Sections
  PrivacySectionCreated
  PrivacySectionUpdated
  PrivacySectionDeleted
  // Shipping & Returns Sections
  ShippingSectionCreated
  ShippingSectionUpdated
  ShippingSectionDeleted
  // Auth
  LoginSuccess
  LoginFailed
  SignOut
  // Payments
  CheckoutCreated
  WebhookProcessed
}

model AuditLog {
  id           String      @id @default(cuid())
  action       AuditAction
  actorId      String?     // User ID (null for system/webhook actions)
  storeId      String?     // Store scope (null for non-store actions like login)
  resourceType String      // e.g., "Product", "Order", "Store"
  resourceId   String?     // ID of the affected record
  metadata     Json?       // Extra context: before/after diff, IP, user-agent, etc.
  ipAddress    String?
  createdAt    DateTime    @default(now())

  @@index([actorId])
  @@index([storeId])
  @@index([action])
  @@index([createdAt])
  @@index([resourceType, resourceId])
  @@map("audit_logs")
}
